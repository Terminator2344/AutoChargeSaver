{
  "name": "revenue-recovery-assistant",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch app/src/server.ts",
    "dev:mock": "cross-env MOCK_LOGIN=true NODE_ENV=development tsx watch app/src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "postinstall": "# cd app && npx prisma generate",
    "migrate": "prisma migrate dev",
    "studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:telegram": "npx tsx tests/telegram.test.ts",
    "test:email": "npx tsx tests/email.test.ts",
    "test:notify": "npx tsx tests/notify.test.ts"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.15",
    "p-queue": "^8.0.1",
    "pg": "^8.11.3",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@prisma/client": "^5.18.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/node": "^22.9.0",
    "@types/node-fetch": "^2.6.11",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.14.0",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
