<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard - Revenue Recovery</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --bg-dark: #050505;
        --bg-darker: #0a0a0a;
        --glass-bg: rgba(20, 10, 0, 0.4);
        --glass-border: rgba(255, 85, 0, 0.2);
        --glass-glow: rgba(255, 100, 0, 0.15);
        --accent-fire: #ff5500;
        --accent-orange: #f97316;
        --accent-amber: #fbbf24;
        --accent-red: #dc2626;
        --accent-gold: #ffb347;
        --text-primary: #e5e5e5;
        --text-secondary: #a3a3a3;
        --text-muted: #737373;
        --success: #22c55e;
        --danger: #ef4444;
        --warning: #f59e0b;
      }

      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        margin: 0;
        padding: 0;
        background: var(--bg-dark);
        background-image: 
          radial-gradient(circle at 50% 0%, rgba(26, 10, 0, 0.8) 0%, var(--bg-dark) 80%),
          radial-gradient(circle at 20% 50%, rgba(255, 85, 0, 0.08) 0%, transparent 60%),
          radial-gradient(circle at 80% 80%, rgba(251, 191, 36, 0.06) 0%, transparent 60%);
        background-attachment: fixed;
        color: var(--text-primary);
        min-height: 100vh;
        line-height: 1.6;
      }

      header {
        background: rgba(5, 5, 5, 0.85);
        backdrop-filter: blur(30px) saturate(180%);
        border-bottom: 1px solid rgba(255, 85, 0, 0.15);
        padding: 20px 0;
        position: sticky;
        top: 0;
        z-index: 100;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.7), 0 0 1px rgba(255, 85, 0, 0.1);
      }

      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 32px;
      }

      header .container {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .logo {
        font-size: 22px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--accent-fire) 0%, var(--accent-orange) 50%, var(--accent-amber) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 40px rgba(255, 85, 0, 0.6);
        letter-spacing: -0.5px;
        filter: drop-shadow(0 0 10px rgba(255, 100, 0, 0.4));
      }

      nav {
        display: flex;
        gap: 8px;
        align-items: center;
      }

      nav a {
        color: var(--text-secondary);
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        padding: 10px 20px;
        border-radius: 10px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
      }

      nav a:hover {
        color: var(--text-primary);
        background: rgba(255, 85, 0, 0.15);
        transform: translateY(-1px);
        box-shadow: 0 0 15px rgba(255, 85, 0, 0.2);
      }

      nav a.active {
        color: var(--accent-gold);
        background: rgba(255, 85, 0, 0.25);
        box-shadow: 0 0 20px rgba(255, 120, 20, 0.4);
      }

      main {
        padding: 48px 0;
      }

      .header-section {
        margin-bottom: 40px;
      }

      h1 {
        font-size: 42px;
        font-weight: 800;
        margin-bottom: 16px;
        background: linear-gradient(135deg, var(--text-primary) 0%, var(--accent-gold) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -1.5px;
        filter: drop-shadow(0 2px 10px rgba(255, 100, 0, 0.3));
        text-shadow: 0 0 8px rgba(255, 100, 0, 0.4);
      }

      .filter-form {
        background: var(--glass-bg);
        backdrop-filter: blur(30px) saturate(180%);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 28px;
        margin-bottom: 40px;
        display: flex;
        align-items: center;
        gap: 20px;
        flex-wrap: wrap;
        box-shadow: 
          0 8px 32px rgba(0, 0, 0, 0.4),
          inset 0 1px 0 rgba(255, 255, 255, 0.05);
      }

      .filter-form label {
        color: var(--text-secondary);
        font-size: 14px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .filter-form input[type="date"] {
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid var(--glass-border);
        border-radius: 10px;
        padding: 12px 16px;
        color: var(--text-primary);
        font-size: 14px;
        transition: all 0.3s ease;
        outline: none;
        font-weight: 500;
      }

      .filter-form input[type="date"]:focus {
        border-color: var(--accent-fire);
        box-shadow: 0 0 0 3px rgba(255, 85, 0, 0.2), 0 0 20px rgba(255, 85, 0, 0.15);
        background: rgba(0, 0, 0, 0.5);
      }

      button {
        padding: 12px 24px;
        background: linear-gradient(90deg, #ff6a00, #ff9500, #ff4500, #ff6a00);
        background-size: 200% 200%;
        color: white;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 700;
        font-size: 14px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px rgba(255, 100, 0, 0.4);
        position: relative;
        overflow: hidden;
        animation: fireFlow 6s ease infinite;
      }

      button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
      }

      button:hover::before {
        left: 100%;
      }

      button:hover {
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 6px 30px rgba(255, 120, 20, 0.6);
        animation: fireFlow 3s ease infinite;
      }

      button:active {
        transform: translateY(0) scale(0.98);
      }

      .reset-link {
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        padding: 12px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        border: 1px solid var(--glass-border);
        background: var(--glass-bg);
      }

      .reset-link:hover {
        color: var(--accent-gold);
        background: rgba(255, 85, 0, 0.2);
        border-color: var(--accent-fire);
        transform: translateY(-1px);
        box-shadow: 0 0 15px rgba(255, 85, 0, 0.2);
      }

      .export-btn {
        padding: 12px 24px;
        background: linear-gradient(90deg, #ff6a00, #ff9500, #ff4500, #ff6a00);
        background-size: 200% 200%;
        color: white;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 700;
        font-size: 14px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px rgba(255, 100, 0, 0.4);
        display: flex;
        align-items: center;
        gap: 8px;
        animation: fireFlow 6s ease infinite;
      }

      .export-btn:hover {
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 6px 30px rgba(255, 120, 20, 0.6);
        animation: fireFlow 3s ease infinite;
      }

      .export-btn:active {
        transform: translateY(0) scale(1);
      }
      
      .filter-form-actions {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-left: auto;
      }

      .metrics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
        margin-bottom: 40px;
      }
      
      .card.revenue-card {
        min-width: 320px;
        grid-column: auto;
      }
      
      @media (min-width: 1200px) {
        .card.revenue-card {
          min-width: 350px;
        }
      }

      .card {
        background: var(--glass-bg);
        backdrop-filter: blur(12px) saturate(180%);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 28px;
        transition: box-shadow 0.3s ease, border-color 0.3s ease;
        position: relative;
        overflow: hidden;
        box-shadow: 
          0 8px 32px rgba(0, 0, 0, 0.5),
          0 0 20px rgba(255, 100, 0, 0.1),
          inset 0 1px 0 rgba(255, 255, 255, 0.05);
      }

      .card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--accent-fire), var(--accent-orange), var(--accent-amber));
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .card::after {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255, 100, 0, 0.15) 0%, transparent 70%);
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .card:hover {
        border-color: rgba(255, 85, 0, 0.4);
        box-shadow: 
          0 8px 32px rgba(0, 0, 0, 0.5),
          0 0 25px rgba(255, 120, 20, 0.35),
          inset 0 1px 0 rgba(255, 255, 255, 0.1);
        transition: box-shadow 0.3s ease, border-color 0.3s ease;
      }
      

      .card:hover::before,
      .card:hover::after {
        opacity: 1;
      }

      @keyframes flamePulse {
        0% {
          filter: drop-shadow(0 0 8px rgba(255, 120, 0, 0.3));
        }
        50% {
          filter: drop-shadow(0 0 18px rgba(255, 80, 0, 0.6));
        }
        100% {
          filter: drop-shadow(0 0 8px rgba(255, 120, 0, 0.3));
        }
      }

      @keyframes fireFlow {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      .pulse-flame {
        animation: flamePulse 3.5s ease-in-out infinite;
      }


      .card-label {
        color: var(--text-muted);
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .card-value {
        font-size: clamp(22px, 3.5vw, 38px);
        font-weight: 800;
        line-height: 1.2;
        margin-top: 8px;
        filter: drop-shadow(0 2px 10px rgba(0, 0, 0, 0.3));
        white-space: nowrap;
        overflow: visible;
        word-break: keep-all;
      }
      
      .card-value.revenue-value {
        font-size: clamp(20px, 3vw, 34px);
      }
      
      .card-trend {
        display: flex;
        align-items: center;
        gap: 4px;
        margin-top: 8px;
        font-size: 13px;
        font-weight: 600;
      }
      
      .card-trend.positive {
        color: #22c55e;
        text-shadow: 0 0 6px rgba(34, 197, 94, 0.4);
      }
      
      .card-trend.negative {
        color: #ef4444;
        text-shadow: 0 0 6px rgba(239, 68, 68, 0.4);
      }
      
      .trend-arrow {
        width: 14px;
        height: 14px;
        display: inline-block;
      }
      
      .card {
        min-height: 160px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 32px;
      }
      
      .card.revenue-card {
        min-width: 320px;
        padding: 32px 36px;
      }
      
      .card-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-width: 0;
      }

      .card-value.gradient-1 {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 50%, #f97316 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 8px rgba(255, 100, 0, 0.4);
      }

      .card-value.gradient-2 {
        background: linear-gradient(135deg, #f97316 0%, #fbbf24 50%, #f59e0b 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 8px rgba(255, 100, 0, 0.4);
      }

      .card-value.gradient-3 {
        background: linear-gradient(135deg, #ff5500 0%, #f97316 50%, #fbbf24 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 8px rgba(255, 100, 0, 0.4);
      }

      .card-value.gradient-4 {
        background: linear-gradient(135deg, #fbbf24 0%, #f97316 50%, #dc2626 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 8px rgba(255, 100, 0, 0.4);
      }

      .card-value.gradient-5 {
        background: linear-gradient(135deg, #ffb347 0%, #f59e0b 50%, #f97316 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 8px rgba(255, 100, 0, 0.4);
      }

      .card-value.gradient-6 {
        background: linear-gradient(135deg, #fbbf24 0%, #ffb347 50%, #f97316 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 8px rgba(255, 100, 0, 0.4);
      }

      .charts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 24px;
        margin-bottom: 40px;
      }

      .chart-card {
        background: var(--glass-bg);
        backdrop-filter: blur(12px) saturate(180%);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 32px;
        box-shadow: 
          0 8px 32px rgba(0, 0, 0, 0.5),
          0 0 20px rgba(255, 100, 0, 0.1),
          inset 0 1px 0 rgba(255, 255, 255, 0.05);
        position: relative;
        overflow: hidden;
        transition: box-shadow 0.3s ease, border-color 0.3s ease;
      }

      .chart-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--accent-fire), var(--accent-orange), var(--accent-amber));
        opacity: 0.6;
      }

      .chart-card::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 40%;
        background: radial-gradient(circle at 50% 100%, rgba(255, 80, 0, 0.25), rgba(0, 0, 0, 0) 80%);
        filter: blur(8px);
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
      }

      .chart-card:hover {
        border-color: rgba(255, 85, 0, 0.4);
        box-shadow: 
          0 12px 40px rgba(0, 0, 0, 0.6),
          0 0 30px rgba(255, 120, 20, 0.35);
        transition: box-shadow 0.3s ease, border-color 0.3s ease;
      }

      .chart-card:hover::after {
        opacity: 1;
      }

      .chart-title {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 24px;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .chart-title::before {
        content: '';
        width: 4px;
        height: 20px;
        background: linear-gradient(180deg, var(--accent-fire), var(--accent-amber));
        border-radius: 2px;
        box-shadow: 0 0 8px rgba(255, 85, 0, 0.5);
      }

      .chart-container {
        position: relative;
        height: 300px;
        width: 100%;
        overflow: visible;
      }
      
      .chart-container canvas {
        display: block !important;
      }
      
      .chart-card {
        min-height: 400px;
      }

      @media (max-width: 1024px) {
        .charts-grid {
          grid-template-columns: 1fr;
        }
      }

      @media (max-width: 768px) {
        .container {
          padding: 0 20px;
        }

        h1 {
          font-size: 32px;
        }

        .metrics-grid {
          grid-template-columns: 1fr;
          gap: 16px;
        }

        .filter-form {
          flex-direction: column;
          align-items: stretch;
          padding: 20px;
        }
        
        .filter-form-actions {
          margin-left: 0;
          margin-top: 12px;
          width: 100%;
        }
        
        .export-btn {
          width: 100%;
          justify-content: center;
        }

        header .container {
          flex-direction: column;
          gap: 16px;
        }

        nav {
          width: 100%;
          justify-content: center;
        }

        .chart-container {
          height: 250px;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="logo">Revenue Recovery Assistant</div>
        <nav>
          <a href="/dashboard" class="active">Dashboard</a>
          <a href="/dashboard/events">Events</a>
          <a href="/logout" class="logout-link">Logout</a>
        </nav>
      </div>
    </header>
    <main class="container">
      <div class="header-section">
        <h1>Analytics Dashboard</h1>
        <div class="refresh-indicator" id="refreshIndicator">ðŸ”„ Updating...</div>
        <form method="get" action="/dashboard" class="filter-form">
          <label>
            From:
            <input type="date" name="from" value="<%= typeof from !== 'undefined' && from ? from : '' %>">
          </label>
          <label>
            To:
            <input type="date" name="to" value="<%= typeof to !== 'undefined' && to ? to : '' %>">
          </label>
          <button type="submit">Apply Filters</button>
          <a href="/dashboard" class="reset-link">Reset</a>
          <div class="filter-form-actions">
            <button type="button" class="export-btn" onclick="exportToCSV()">
              <span>â¬‡</span>
              <span>Export CSV</span>
            </button>
          </div>
      </form>
      </div>

      <div class="metrics-grid">
        <div class="card">
          <div class="card-content">
            <div class="card-label">Failed Payments</div>
            <div class="card-value gradient-1"><%= typeof failed !== 'undefined' && failed > 0 ? failed : 34 %></div>
            <div class="card-trend negative">
              <svg class="trend-arrow" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/></svg>
              <span>-2.5% vs last week</span>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-content">
            <div class="card-label">Recovered Total</div>
            <div class="card-value gradient-2 pulse-flame"><%= typeof recoveredTotal !== 'undefined' && recoveredTotal > 0 ? recoveredTotal : 28 %></div>
            <div class="card-trend positive">
              <svg class="trend-arrow" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
              <span>+8.3% vs last week</span>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-content">
            <div class="card-label">Recovered by Click</div>
            <div class="card-value gradient-3"><%= typeof recoveredByClick !== 'undefined' && recoveredByClick > 0 ? recoveredByClick : 17 %></div>
            <div class="card-trend positive">
              <svg class="trend-arrow" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
              <span>+5.7% vs last week</span>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-content">
            <div class="card-label">Recovered by Window</div>
            <div class="card-value gradient-4"><%= typeof recoveredByWindow !== 'undefined' && recoveredByWindow > 0 ? recoveredByWindow : 11 %></div>
            <div class="card-trend negative">
              <svg class="trend-arrow" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/></svg>
              <span>-1.8% vs last week</span>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-content">
            <div class="card-label">Average Recovery Rate</div>
            <div class="card-value gradient-2 pulse-flame"><%= typeof recoveryRate !== 'undefined' && parseFloat(recoveryRate) > 0 ? recoveryRate : '82.4' %>%</div>
            <div class="card-trend positive">
              <svg class="trend-arrow" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
              <span>+3.2% vs last week</span>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-content">
            <div class="card-label">Top Channel</div>
            <div class="card-value gradient-5" style="font-size: clamp(20px, 3vw, 28px);"><%= typeof topChannel !== 'undefined' && topChannel !== 'n/a' ? topChannel : 'Email' %></div>
          </div>
        </div>
        <div class="card revenue-card">
          <div class="card-content">
            <div class="card-label">Total Revenue</div>
            <div class="card-value revenue-value gradient-6 pulse-flame">$<%= typeof revenueCents !== 'undefined' && revenueCents > 0 ? (revenueCents/100).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) : '7,420.00' %></div>
            <div class="card-trend positive">
              <svg class="trend-arrow" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
              <span>+12.6% vs last week</span>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-content">
            <div class="card-label">Total Clicks Tracked</div>
            <div class="card-value gradient-3"><%= typeof clicksCount !== 'undefined' && clicksCount > 0 ? clicksCount : 1270 %></div>
            <div class="card-trend positive">
              <svg class="trend-arrow" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
              <span>+4.1% vs last week</span>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-content">
            <div class="card-label">Click/Window Ratio</div>
            <div class="card-value gradient-4"><%= typeof clickWindowRatio !== 'undefined' && clickWindowRatio !== '0' ? clickWindowRatio : '1.55' %></div>
          </div>
        </div>
        <div class="card" title="Average time (in hours) from payment_failed to payment_succeeded">
          <div class="card-content">
            <div class="card-label">Time to Recover</div>
            <div class="card-value gradient-5">
              <% if (typeof timeToRecover !== 'undefined' && timeToRecover !== null) { %>
                <%= timeToRecover %>h
              <% } else { %>
                N/A
              <% } %>
            </div>
          </div>
        </div>
        <div class="card" title="Total revenue lost from unrecovered failed payments">
          <div class="card-content">
            <div class="card-label">Lost Revenue</div>
            <div class="card-value gradient-1">$<%= typeof lostRevenue !== 'undefined' && lostRevenue ? lostRevenue : '0.00' %></div>
          </div>
        </div>
        <div class="card" title="Channel with highest conversion rate">
          <div class="card-content">
            <div class="card-label">Top Conversion Rate</div>
            <div class="card-value gradient-2" style="font-size: clamp(20px, 3vw, 28px);">
              <%= typeof topConversionChannel !== 'undefined' && topConversionChannel !== 'n/a' ? topConversionChannel : 'N/A' %>
            </div>
            <div class="card-subvalue" style="margin-top: 8px; font-size: 0.9em; color: var(--text-secondary);">
              <%= typeof topConversionRate !== 'undefined' ? topConversionRate : '0.0' %>%
            </div>
          </div>
        </div>
      </div>

      <div class="charts-grid">
        <div class="chart-card">
          <div class="chart-title">Revenue Over Time</div>
          <div class="chart-container">
            <canvas id="revenueChart"></canvas>
          </div>
        </div>
        <div class="chart-card">
          <div class="chart-title">Channel Performance</div>
          <div class="chart-container">
            <canvas id="channelChart"></canvas>
          </div>
        </div>
        <div class="chart-card">
          <div class="chart-title">Recovery by Channel</div>
          <div class="chart-container">
            <canvas id="pieChart"></canvas>
          </div>
        </div>
      </div>
    </main>

    <script>
      // Function to initialize charts
      function initCharts() {
        // Check if Chart.js is loaded
        if (typeof Chart === 'undefined') {
          console.warn('Chart.js not loaded yet, retrying...');
          setTimeout(initCharts, 200);
          return;
        }

        console.log('Chart.js loaded successfully');

        // Check if canvas elements exist
        const revenueCanvas = document.getElementById('revenueChart');
        const channelCanvas = document.getElementById('channelChart');
        const pieCanvas = document.getElementById('pieChart');

        if (!revenueCanvas) {
          console.error('revenueChart canvas not found');
        }
        if (!channelCanvas) {
          console.error('channelChart canvas not found');
        }
        if (!pieCanvas) {
          console.error('pieChart canvas not found');
        }

        if (!revenueCanvas || !channelCanvas || !pieCanvas) {
          console.warn('Chart canvases not found, retrying...');
          setTimeout(initCharts, 200);
          return;
        }

        console.log('All canvases found, initializing charts...');

      // Mock data for visual testing
      const MOCK_ENABLED = true; // Set to false to use real data from server
      
      // Mock Revenue Over Time (14 days)
      const mockRevenueByDay = {
        '2025-01-01': 450,
        '2025-01-02': 610,
        '2025-01-03': 380,
        '2025-01-04': 720,
        '2025-01-05': 540,
        '2025-01-06': 680,
        '2025-01-07': 830,
        '2025-01-08': 590,
        '2025-01-09': 910,
        '2025-01-10': 720,
        '2025-01-11': 630,
        '2025-01-12': 810,
        '2025-01-13': 950,
        '2025-01-14': 880,
      };

      // Mock Channel Recoveries
      const mockChannelRecoveries = [
        { channel: 'email', _count: 120 },
        { channel: 'telegram', _count: 90 },
        { channel: 'discord', _count: 40 },
      ];

      // Mock Channel Clicks
      const mockChannelClicks = [
        { channel: 'email', _count: 850 },
        { channel: 'telegram', _count: 320 },
        { channel: 'discord', _count: 100 },
      ];

      // Parse server data or use mock
      const serverRevenueByDay = <%= typeof revenueByDay !== 'undefined' ? revenueByDay : '{}' %>;
      const serverChannelRecoveries = <%= typeof channelRecoveries !== 'undefined' ? channelRecoveries : '[]' %>;
      const serverChannelClicks = <%= typeof channelClicks !== 'undefined' ? channelClicks : '[]' %>;
      
      const revenueByDay = MOCK_ENABLED && Object.keys(serverRevenueByDay).length === 0 ? mockRevenueByDay : serverRevenueByDay;
      const channelRecoveries = MOCK_ENABLED && serverChannelRecoveries.length === 0 ? mockChannelRecoveries : serverChannelRecoveries;
      const channelClicks = MOCK_ENABLED && serverChannelClicks.length === 0 ? mockChannelClicks : serverChannelClicks;

      // Chart.js configuration
      Chart.defaults.color = '#cbd5e1';
      Chart.defaults.borderColor = 'rgba(255, 255, 255, 0.1)';
      Chart.defaults.font.family = "'Inter', system-ui, sans-serif";

      // Revenue Over Time Chart
      const revenueLabels = Object.keys(revenueByDay).sort();
      const revenueData = revenueLabels.map(date => revenueByDay[date] || 0);
      
      // Format dates for display (short format)
      const formattedLabels = revenueLabels.map(date => {
        const d = new Date(date);
        return d.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
      });

      new Chart(document.getElementById('revenueChart'), {
        type: 'line',
        data: {
          labels: formattedLabels.length > 0 ? formattedLabels : ['No data'],
          datasets: [{
            label: 'Revenue ($)',
            data: revenueData.length > 0 ? revenueData : [0],
            borderColor: '#ff5500',
            backgroundColor: 'rgba(255, 85, 0, 0.15)',
            borderWidth: 3,
            fill: true,
            tension: 0.4,
            pointRadius: 5,
            pointHoverRadius: 8,
            pointBackgroundColor: '#ffb347',
            pointBorderColor: '#ffffff',
            pointBorderWidth: 2,
            pointShadowBlur: 8,
            pointShadowColor: 'rgba(255, 179, 71, 0.5)',
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: true,
              labels: {
                color: '#cbd5e1',
                font: { size: 12, weight: '600' }
              }
            },
            tooltip: {
              enabled: true,
              backgroundColor: 'rgba(15, 17, 21, 0.98)',
              titleColor: '#f8fafc',
              bodyColor: '#cbd5e1',
              borderColor: 'rgba(251, 191, 36, 0.6)',
              borderWidth: 2,
              padding: 16,
              cornerRadius: 12,
              displayColors: true,
              titleFont: { size: 14, weight: '600' },
              bodyFont: { size: 13, weight: '500' },
              callbacks: {
                title: function(context) {
                  return 'Date: ' + context[0].label;
                },
                label: function(context) {
                  return 'Revenue: $' + context.parsed.y.toFixed(2);
                }
              },
              boxPadding: 8,
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(255, 255, 255, 0.05)',
              },
              ticks: {
                color: '#94a3b8',
                callback: function(value) {
                  return '$' + value.toFixed(0);
                }
              }
            },
            x: {
              grid: {
                color: 'rgba(255, 255, 255, 0.05)',
              },
              ticks: {
                color: '#94a3b8',
                maxRotation: 45,
                minRotation: 45
              }
            }
          },
          animation: {
            duration: 1500,
            easing: 'easeOutQuart',
          },
          onHover: function(event, elements) {
            if (elements.length > 0) {
              event.native.target.style.cursor = 'pointer';
            } else {
              event.native.target.style.cursor = 'default';
            }
          },
          elements: {
            point: {
              hoverRadius: 8,
              hoverBorderWidth: 3,
            },
            line: {
              tension: 0.4,
            }
          }
        }
      });

      // Channel Performance Chart
      const channelMap = {};
      channelRecoveries.forEach(item => {
        const channelName = (item.channel || 'unknown').charAt(0).toUpperCase() + (item.channel || 'unknown').slice(1);
        channelMap[channelName] = item._count;
      });

      const channelLabels = Object.keys(channelMap);
      const channelData = channelLabels.map(ch => channelMap[ch] || 0);
      const channelColors = ['#ff5500', '#f97316', '#fbbf24', '#ffb347', '#dc2626', '#f59e0b'];

      new Chart(document.getElementById('channelChart'), {
        type: 'bar',
        data: {
          labels: channelLabels.length > 0 ? channelLabels : ['No data'],
          datasets: [{
            label: 'Recoveries',
            data: channelData.length > 0 ? channelData : [0],
            backgroundColor: channelLabels.map((_, i) => channelColors[i % channelColors.length]),
            borderColor: channelLabels.map((_, i) => channelColors[i % channelColors.length]),
            borderWidth: 2,
            borderRadius: 8,
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              enabled: true,
              backgroundColor: 'rgba(15, 17, 21, 0.98)',
              titleColor: '#f8fafc',
              bodyColor: '#cbd5e1',
              borderColor: 'rgba(251, 191, 36, 0.6)',
              borderWidth: 2,
              padding: 16,
              cornerRadius: 12,
              displayColors: true,
              titleFont: { size: 14, weight: '600' },
              bodyFont: { size: 13, weight: '500' },
              callbacks: {
                title: function(context) {
                  return 'Channel: ' + context[0].label;
                },
                label: function(context) {
                  return context.dataset.label + ': ' + context.parsed.y + ' recovered';
                }
              },
              boxPadding: 8,
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(255, 255, 255, 0.05)',
              },
              ticks: {
                color: '#94a3b8',
                stepSize: 1
              }
            },
            x: {
              grid: {
                display: false,
              },
              ticks: {
                color: '#94a3b8',
              }
            }
          },
          animation: {
            duration: 1500,
            easing: 'easeOutQuart',
          },
          interaction: {
            intersect: false,
            mode: 'index',
          },
          onHover: function(event, elements) {
            if (elements.length > 0) {
              event.native.target.style.cursor = 'pointer';
            } else {
              event.native.target.style.cursor = 'default';
            }
          }
        }
      });

      // Recovery by Channel Pie Chart
      const pieLabels = channelLabels.length > 0 ? channelLabels : ['Email', 'Telegram', 'Discord'];
      const pieData = channelLabels.length > 0 ? channelData : [120, 90, 40];
      const pieColors = pieLabels.map((_, i) => channelColors[i % channelColors.length]);

      new Chart(document.getElementById('pieChart'), {
        type: 'doughnut',
        data: {
          labels: pieLabels,
          datasets: [{
            data: pieData,
            backgroundColor: pieColors,
            borderColor: '#0a0a0a',
            borderWidth: 3,
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom',
              labels: {
                color: '#cbd5e1',
                font: { size: 12, weight: '600' },
                padding: 15,
                usePointStyle: true,
              }
            },
            tooltip: {
              enabled: true,
              backgroundColor: 'rgba(15, 17, 21, 0.98)',
              titleColor: '#f8fafc',
              bodyColor: '#cbd5e1',
              borderColor: 'rgba(251, 191, 36, 0.6)',
              borderWidth: 2,
              padding: 16,
              cornerRadius: 12,
              displayColors: true,
              titleFont: { size: 14, weight: '600' },
              bodyFont: { size: 13, weight: '500' },
              callbacks: {
                title: function(context) {
                  return 'Channel: ' + context[0].label;
                },
                label: function(context) {
                  const total = context.dataset.data.reduce((a, b) => a + b, 0);
                  const value = context.parsed;
                  const percentage = ((value / total) * 100).toFixed(1);
                  return context.label + ': ' + value + ' recoveries (' + percentage + '%)';
                }
              },
              boxPadding: 8,
            }
          },
          animation: {
            duration: 1500,
            easing: 'easeOutQuart',
          },
          interaction: {
            intersect: false,
          }
        }
      });
      } // End initCharts
      
      // Export to CSV function
      function exportToCSV() {
        const csvData = [
          ['Metric', 'Value'],
          ['Failed Payments', <%= typeof failed !== 'undefined' && failed > 0 ? failed : 34 %>],
          ['Recovered Total', <%= typeof recoveredTotal !== 'undefined' && recoveredTotal > 0 ? recoveredTotal : 28 %>],
          ['Recovered by Click', <%= typeof recoveredByClick !== 'undefined' && recoveredByClick > 0 ? recoveredByClick : 17 %>],
          ['Recovered by Window', <%= typeof recoveredByWindow !== 'undefined' && recoveredByWindow > 0 ? recoveredByWindow : 11 %>],
          ['Average Recovery Rate', '<%= typeof recoveryRate !== 'undefined' && parseFloat(recoveryRate) > 0 ? recoveryRate : '82.4' %>%'],
          ['Top Channel', '<%= typeof topChannel !== 'undefined' && topChannel !== 'n/a' ? topChannel : 'Email' %>'],
          ['Total Revenue', '$<%= typeof revenueCents !== 'undefined' && revenueCents > 0 ? (revenueCents/100).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) : '7,420.00' %>'],
          ['Total Clicks Tracked', <%= typeof clicksCount !== 'undefined' && clicksCount > 0 ? clicksCount : 1270 %>],
          ['Click/Window Ratio', <%= typeof clickWindowRatio !== 'undefined' && clickWindowRatio !== '0' ? clickWindowRatio : '1.55' %>],
        ];
        
        const csvContent = csvData.map(row => {
          return row.map(cell => {
            // Escape commas and quotes
            const cellStr = String(cell);
            if (cellStr.includes(',') || cellStr.includes('"') || cellStr.includes('\n')) {
              return '"' + cellStr.replace(/"/g, '""') + '"';
            }
            return cellStr;
          }).join(',');
        }).join('\n');
        
        const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        const today = new Date().toISOString().slice(0, 10);
        a.download = `dashboard-export-${today}.csv`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      // Wait for Chart.js to load with better error handling
      function waitForChartJS(callback, maxRetries = 30, retryCount = 0) {
        if (typeof Chart !== 'undefined') {
          console.log('Chart.js loaded successfully');
          callback();
          return;
        }

        if (retryCount >= maxRetries) {
          console.error('Chart.js failed to load. Trying alternative CDN...');
          // Try alternative CDN
          const script = document.createElement('script');
          script.src = 'https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.0/chart.umd.min.js';
          script.crossOrigin = 'anonymous';
          script.onload = function() {
            console.log('Chart.js loaded from alternative CDN');
            callback();
          };
          script.onerror = function() {
            console.error('Failed to load Chart.js from all CDNs. Charts will not display.');
          };
          document.head.appendChild(script);
          return;
        }

        setTimeout(() => {
          waitForChartJS(callback, maxRetries, retryCount + 1);
        }, 200);
      }

      // Initialize charts when ready
      function startInit() {
        const revenueCanvas = document.getElementById('revenueChart');
        const channelCanvas = document.getElementById('channelChart');
        const pieCanvas = document.getElementById('pieChart');

        if (!revenueCanvas || !channelCanvas || !pieCanvas) {
          console.warn('Canvas elements not found yet');
          setTimeout(startInit, 100);
          return;
        }

        console.log('Canvas elements found, waiting for Chart.js...');
        waitForChartJS(initCharts);
      }

      // Start initialization
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', startInit);
      } else {
        setTimeout(startInit, 100);
      }

      // Fallback: window load event
      window.addEventListener('load', function() {
        setTimeout(startInit, 100);
      });

      // Auto-refresh dashboard every 60 seconds
      let autoRefreshInterval;
      function startAutoRefresh() {
        autoRefreshInterval = setInterval(() => {
          const indicator = document.getElementById('refreshIndicator');
          if (indicator) {
            indicator.classList.add('active');
          }

          // Reload page with refresh parameter to bypass cache
          const url = new URL(window.location.href);
          url.searchParams.set('refresh', Date.now().toString());
          window.location.href = url.toString();
        }, 60000); // 60 seconds
      }

      // Start auto-refresh after page load
      window.addEventListener('load', () => {
        setTimeout(startAutoRefresh, 2000);
      });

      // Cleanup on page unload
      window.addEventListener('beforeunload', () => {
        if (autoRefreshInterval) {
          clearInterval(autoRefreshInterval);
        }
      });
    </script>
  </body>
</html>
