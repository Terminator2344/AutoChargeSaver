{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "app/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["app/src/**/*", "app/src/types/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}


